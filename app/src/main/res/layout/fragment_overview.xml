<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.dicoding.nian.footballapps.overview.OverviewFragment">
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:padding="@dimen/dimen_10"
            android:id="@+id/LL"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/strTeamBadge"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_add_to_favorites" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/strTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/intFormedYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="@dimen/dimen_10"
                    android:id="@+id/strDescriptionEN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

</android.support.v4.widget.NestedScrollView>
